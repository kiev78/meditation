    "content": [
      { "say": "Welcome to this guided meditation." },
      { "pause": 2 },
      { "say": "Find a comfortable position, either sitting or lying down." },
      { "pause": 3 },
      { "say": "Allow your body to be at ease." },
      { "pause": 3 },

      { "say": "Begin by bringing your attention to the sensations of breathing." },
      { "pause": 4 },
      { "say": "Notice how the body moves gently with each breath." },
      { "pause": 4 },
      { "say": "The chest rising." },
      { "pause": 2 },
      { "say": "And falling." },
      { "pause": 4 },

      { "say": "Now notice the sensation of the air coming in through the nose." },
      { "pause": 4 },
      { "say": "Feel where the air touches the upper lip." },
      { "pause": 4 },
      { "say": "Feel where it touches the nose." },
      { "pause": 4 },
      { "say": "Become very curious about whatever sensation appears." },
      { "pause": 4 },
      { "say": "Just stay here for a little while." },
      { "pause": 3 },
      { "say": "Observing the breath in the area between the nose and the upper lip." },
      { "pause": 6 },

      { "say": "Now gently move your attention to a different area." },
      { "pause": 4 },
      { "say": "Perhaps the tip of the nose." },
      { "pause": 3 },
      { "say": "Or the back of the throat." },
      { "pause": 3 },
      { "say": "Or the movement of the breath in the belly." },
      { "pause": 5 },
      { "say": "Wherever you choose, just stay there for a bit." },
      { "pause": 4 },
      { "say": "Simply observing." },
      { "pause": 4 },

      { "say": "And now, briefly, look back." },
      { "pause": 3 },
      { "say": "Who is doing the observing?" },
      { "pause": 6 },

      { "say": "Is there anything there?" },
      { "pause": 6 },
      { "say": "As soon as you look, you may notice a subtle shift in perspective." },
      { "pause": 5 },
      { "say": "Then gently return to the breath." },
      { "pause": 5 },
      { "say": "Resting in awareness." },
      { "pause": 6 },

      { "say": "You may notice that there is simply breathing happening." },
      { "pause": 5 },
      {
        "say": "And when you direct attention again to the breath, it may feel slightly different."
      },
      { "pause": 6 },
      { "say": "Notice which way feels more authentic for you." },
      { "pause": 7 },

      { "say": "And if it does not feel that way, that is completely okay." },
      { "pause": 4 },
      { "say": "Simply return to observing sensations." },
      { "pause": 4 },
      { "say": "Whatever sensation appears in consciousness." },
      { "pause": 4 },
      { "say": "Accept it." },
      { "pause": 3 },
      { "say": "And pay gentle attention." },
      { "pause": 5 },

      { "say": "Observe very closely." },
      { "pause": 3 },
      { "say": "What does the raw sensation actually feel like?" },
      { "pause": 6 },
      { "say": "Notice its texture." },
      { "pause": 4 },
      { "say": "Does it have a beginning?" },
      { "pause": 4 },
      { "say": "And again, briefly glance back." },
      { "pause": 5 },

      { "say": "Is there anyone pointing the attention?" },
      { "pause": 7 },
      { "say": "And then relax into observation." },
      { "pause": 6 },

      { "say": "Notice that your eyes are closed." },
      { "pause": 3 },
      { "say": "Yet there is some light behind the eyes." },
      { "pause": 4 },
      { "say": "Bring your focus to the space behind the eyes." },
      { "pause": 4 },
      { "say": "As though you are looking into a vast openness." },
      { "pause": 6 },
      { "say": "You are still feeling the breath." },
      { "pause": 3 },
      { "say": "And now there is also this sense of seeing." },
      { "pause": 5 },
      { "say": "Undefined." },
      { "pause": 3 },
      { "say": "Undetermined." },
      { "pause": 6 },

      { "say": "You cannot really name what you are seeing." },
      { "pause": 4 },
      { "say": "So simply rest with that seeing." },
      { "pause": 7 },
      { "say": "And if a thought arises, notice it with curiosity." },
      { "pause": 5 },
      { "say": "Are you seeing the thought?" },
      { "pause": 5 },
      { "say": "Does the thought have a beginning?" },
      { "pause": 6 },
      {
        "say": "And when you are resting in this space behind the eyes, and feeling the breath, does the thought remain?"
      },
      { "pause": 7 },

      { "say": "While observing this space, briefly look back again." },
      { "pause": 5 },
      { "say": "Who is looking through the eyes?" },
      { "pause": 7 },

      { "say": "Is that a feeling?" },
      { "pause": 4 },
      { "say": "A sensation?" },
      { "pause": 4 },
      { "say": "Or is there nothing in particular there?" },
      { "pause": 7 },
      { "say": "Now return to simply looking." },
      { "pause": 4 },
      { "say": "Simply feeling." },
      { "pause": 6 },

      { "say": "Relax completely." },
      { "pause": 3 },
      { "say": "Let whatever sensations appear within this open awareness." },
      { "pause": 6 },
      { "say": "Awareness is like the sky." },
      { "pause": 4 },
      { "say": "And sensations are like clouds." },
      { "pause": 5 },
      { "say": "Appearing." },
      { "pause": 3 },
      { "say": "And disappearing." },
      { "pause": 6 },

      { "say": "You may also imagine yourself as the ocean." },
      { "pause": 4 },
      { "say": "With sensations as waves." },
      { "pause": 5 },
      { "say": "Or as a mountain." },
      { "pause": 4 },
      { "say": "With sensations like plants and animals moving across it." },
      { "pause": 6 },
      { "say": "The mountain remains solid." },
      { "pause": 4 },
      { "say": "Unmoving." },
      { "pause": 6 },

      { "say": "Rest in that open awareness." },
      { "pause": 6 },
      { "say": "Whatever arises, you remain steady." },
      { "pause": 5 },
      { "say": "Observing." },
      { "pause": 3 },
      { "say": "Welcoming." },
      { "pause": 5 },
      { "say": "There is a gentle relationship with these sensations." },
      { "pause": 5 },
      { "say": "Almost like a quiet friendship." },
      { "pause": 7 },

      { "say": "Now briefly check your body posture." },
      { "pause": 4 },
      { "say": "Is the body relaxed?" },
      { "pause": 4 },
      { "say": "Is it upright and at ease?" },
      { "pause": 5 },
      { "say": "Noble." },
      { "pause": 2 },
      { "say": "And silent." },
      { "pause": 5 },
      { "say": "If there is any tension, gently adjust." },
      { "pause": 6 },

      { "say": "Mindfully adjust the posture." },
      { "pause": 4 },
      { "say": "Keeping the same attitude of curiosity." },
      { "pause": 5 },
      { "say": "Interested in the unique flavor of each sensation." },
      { "pause": 6 },
      { "say": "Without effort." },
      { "pause": 6 },

      { "say": "Now simply relax." },
      { "pause": 4 },
      { "say": "Let sensations wash over you." },
      { "pause": 5 },
      { "say": "Or float through awareness." },
      { "pause": 6 },

      { "say": "In these final moments, you may gently open your eyes." },
      { "pause": 5 },
      { "say": "Notice the world appearing." },
      { "pause": 4 },
      { "say": "Shapes." },
      { "pause": 2 },
      { "say": "Colors." },
      { "pause": 3 },
      { "say": "Movement." },
      { "pause": 5 },
      { "say": "Observe it all with the same equanimity." },
      { "pause": 6 },
      { "say": "The same curiosity." },
      { "pause": 6 },

      { "say": "Notice thoughts as they arise." },
      { "pause": 4 },
      { "say": "They are automatic." },
      { "pause": 4 },
      { "say": "And that is okay." },
      { "pause": 4 },
      { "say": "They are like clouds." },
      { "pause": 5 },
      { "say": "Like waves." },
      { "pause": 5 },
      { "say": "And you remain unmoved." },
      { "pause": 8 }
    ]
  }
