{
  "teacher": "Meditation Timer",
  "title": "Mindfulness of Breathing",
  "pitch": 0.5,
  "sections": [
    {
      "type": "intro",
      "content": [
        { "say": "Welcome to this guided meditation." },
        { "pause": 2 },
        { "say": "Please find a comfortable position, either sitting or lying down." },
        {
          "say": [
            { "text": "Close" },
            { "text": "your" },
            { "text": "eyes," },
            { "text": "and" },
            { "text": "take" },
            { "text": "a" },
            { "text": "deep", "pitch": 0.4 },
            { "text": "breath" },
            { "text": "in." }
          ]
        },
        { "pause": 5 },
        { "say": "And let it out.", "rate": 0.85 },
        { "pause": 5 },
        { "say": "Allow your body to settle into this space." },
        { "pause": 5 }
      ]
    },
    {
      "type": "poke",
      "content": [
        { "say": "Notice your breathing." },
        { "pause": 2 },
        { "say": "Feel the cool air entering your nose," },
        { "pause": 2 },
        { "say": "and the warm air leaving." },
        { "pause": 5 },
        { "say": "You don't need to change anything." },
        { "pause": 1 },
        { "say": [ { "text": "Just" , "pitch": 0.65}, { "text": "observe.", "rate": 0.8 } ] },
        { "pause": 5 }
      ]
    },
    {
      "type": "poke",
      "content": [
        { "say": "If your mind has wandered to thoughts of the past or future," },
        { "pause": 2 },
        { "say": "gently bring it back." },
        { "pause": 2 },
        { "say": "Bring your attention back to the sensation of the breath." },
        { "pause": 5 },
        { "say": "You are here, right now." },
        { "pause": 5 }
      ]
    },
    {
      "type": "poke",
      "content": [
        { "say": "Feel the weight of your body pressing down." },
        { "pause": 3 },
        { "say": "Notice any areas of tension," },
        { "pause": 2 },
        { "say": "and see if you can soften them." },
        { "pause": 5 },
        { "say": "Rest in this awareness." },
        { "pause": 5 }
      ]
    }
  ]
}
